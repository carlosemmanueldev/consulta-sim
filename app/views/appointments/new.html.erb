<div class="container text-center">
  <div class="home">
    <h2>Marcar Consulta</h2>

    <%= form_with model: @appointment do |f| %>

      <div class="field">
        <%= f.label :'MÃ©dico' %><br />
        <%= collection_select(:appointment, :doctor_id, Doctor.where(role: 'doctor').all, :id, :doctor_name_expertise, {:prompt => 'Selecione'} ) %>
      </div>

      <div class="field mt-2">
        <%= f.label :'Data da consulta' %><br />
