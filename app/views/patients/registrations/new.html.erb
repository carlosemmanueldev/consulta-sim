<div class="container text-center">
  <div class="home">
    <h2>Cadastro</h2>

    <%= nested_form_for([resource_name, resource.with_address], url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :Nome %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :'Data de Nascimento' %><br />
        <%= f.date_field :birthday, :order => [:day, :month, :year]%>
      </div>

      <div class="field">
        <%= f.label :'CPF', class: "uppercase" %>
        <em>(apenas números)</em><br/>
        <%= f.text_field :document, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :'E-mail' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :Senha %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :'Confirme a senha' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <%= f.hidden_field :role, :value => :patient %>

      <%= f.fields_for :address do |a| %>
        <div class="field">
          <%= a.label :'CEP', class: "uppercase" %>
          <em>(apenas números)</em><br/>
          <%= a.text_field :postal_code %>
        </div>

        <div class="field">
          <%= a.label :'Estado' %><br />
          <%= a.select :state, options_for_select(br_states) %>
        </div>

        <div class="field">
          <%= a.label :'Cidade' %><br />
          <%= a.text_field :city %>
        </div>

        <div class="field">
          <%= a.label :'Bairro' %><br />
          <%= a.text_field :neighborhood %>
        </div>

        <div class="field">
          <%= a.label :'Rua' %><br />
          <%= a.text_field :street %>
        </div>

        <div class="field">
          <%= a.label :'Número' %><br />
          <%= a.text_field :number %>
        </div>

        <div class="field">
          <%= a.label :'Complemento' %><br />
          <%= a.text_field :complement %>
        </div>
      <% end %>

      <div class="actions my-3">
        <%= f.submit "Cadastrar", class: "btn btn-purple" %>
      </div>
    <% end %>
  </div>
</div>